<VBox fx:controller="ru.paalse.file_cloud.client.Controller" xmlns:fx="http://javafx.com/fxml">
    <MenuBar>
        <Menu text="File">
            <MenuItem text="Settings"/>
            <MenuItem text="Exit" onAction="#exitAction"/>
        </Menu>
    </MenuBar>
    <HBox spacing="5" >
        <Text text="Local repository"/>
        <Text text="Remote repository"/>
    </HBox>
    <HBox spacing="5">
        <TableView maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        <TableView maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        <padding>
            <Insets top="5" left="5" right="5"/>
        </padding>
    </HBox>

    <HBox spacing="5">
        <Button text="Upload" maxWidth="Infinity" HBox.hgrow="ALWAYS" focusTraversable="false"/>
        <Button text="Download" maxWidth="Infinity" HBox.hgrow="ALWAYS" focusTraversable="false"/>
        <Button text="Delete" maxWidth="Infinity" HBox.hgrow="ALWAYS" focusTraversable="false"/>
        <Button text="Exit" maxWidth="Infinity" HBox.hgrow="ALWAYS" focusTraversable="false" onAction="#exitAction"/>
        <padding>
            <Insets top="5" bottom="5" left="5" right="5"/>
        </padding>
    </HBox>
</VBox>